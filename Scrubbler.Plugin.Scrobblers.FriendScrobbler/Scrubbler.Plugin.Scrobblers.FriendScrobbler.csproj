<Project Sdk="Uno.Sdk">

    <PropertyGroup>
        <!-- Uno requires TargetFrameworks (plural), even for one -->
        <TargetFrameworks>net10.0</TargetFrameworks>

        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>

        <!-- Optional but recommended -->
        <UseUnoXaml>true</UseUnoXaml>
        <EnableDefaultXamlItems>true</EnableDefaultXamlItems>

        <!-- This helps IDEs know it's a Uno/WinUI library -->
        <OutputType>Library</OutputType>
    </PropertyGroup>

    <!-- Remove autogenerated item duplication -->
    <ItemGroup>
        <None Remove="FriendScrobbleView.xaml" />
    </ItemGroup>

    <ItemGroup>
        <!-- External dependencies -->
        <PackageReference Include="Scrubbler.PluginBase" />
        <PackageReference Include="Shoegaze.LastFM" />
    </ItemGroup>

    <!-- Uno.Sdk already handles XAML codegen, but explicit Page is fine -->
    <ItemGroup>
        <Page Include="FriendScrobbleView.xaml">
            <Generator>MSBuild:Compile</Generator>
        </Page>
    </ItemGroup>

    <!-- Environment file -->
    <ItemGroup>
        <None Update="environment.env">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
        </None>
    </ItemGroup>
    <ItemGroup>
      <Content Include="icon.png">
        <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
      </Content>
    </ItemGroup>

</Project>
